<div class="min-vh-100">
  <div class="sidebar-login">

    <div class="login-main-text text-white">

      <h2 class="mb-5">
        <i class="fa fa-graduation-cap" aria-hidden="true"></i>
        {{app.title}}
      </h2>

      <p>
        Welcome.
      </p>

      <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>

    </div>
  </div>

  <div class="home login h-100">
    <div class="row h-100 m-0">
      <div class="col-md-6 col-sm-12">
        <div class="login-form">

          <div class="custom-control custom-switch mb-4 mt-4 mt-lg-0">
            <input class="custom-control-input" type="checkbox" id="darkSwitch">
            <label class="custom-control-label" for="darkSwitch">
              <i class="fa fa-moon-o" aria-hidden="true"></i>
            </label>
          </div>

          {{#if error}}
            <div class="alert bg-danger text-white alert-dismissible fade show" role="alert">
              {{error}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span class="text-white" aria-hidden="true">&times;</span>
              </button>
            </div>
          {{/if}}

          <hr>

          <form action="/login" method="POST" class="mb-4" autocomplete="off">

            <div class="form-group">
              <label>User</label>
              <input type="text" name="login" class="form-control form-login"
                style="height: calc(1.5em + .75rem + 2px); !important" placeholder="Username" required>
            </div>

            <div class="form-group mt-2">
              <label>Password</label>
              <input type="password" name="password" class="form-control form-login"
                style="height: calc(1.5em + .75rem + 2px); !important" placeholder="Password" required>
            </div>

            <button type="submit" class="btn btn-primary mt-4 mb-lg-0">
              <i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp;
              Submit
            </button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
